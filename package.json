{
  "name": "Agile-be",
  "version": "1.0.0",
  "main": "app.js",
  "_moduleAliases": {
    "@root": ".",
    "@config": "./config",
    "@router": "./router",
    "@models": "./models",
    "@app": "./app",
    "@controllers": "./app/controllers",
    "@middlewares": "./app/middlewares",
    "@utils": "./app/utils",
    "@repositories": "./app/repositories",
    "@errorHandlers": "./app/middlewares/errorHandlers",
    "@agile": "./agile"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "<rootDir>/agile/**/*.js",
      "<rootDir>/app/controllers/**/*.js",
      "<rootDir>/app/utils/**/*.js",
      "<rootDir>/models/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "./app/controllers/**/*.js": {
        "branches": 50
      },
      "./models/**/*.js": {
        "branches": 40
      }
    },
    "moduleFileExtensions": [
      "js"
    ],
    "moduleNameMapper": {
      "^@router(.*)$": "<rootDir>/router$1",
      "^@root(.*)$": "..",
      "^@config(.*)$": "<rootDir>/config$1",
      "^@controllers(.*)$": "<rootDir>/app/controllers$1",
      "^@models(.*)$": "<rootDir>/models$1",
      "^@app(.*)$": "<rootDir>/app$1",
      "^@middlewares(.*)$": "<rootDir>/app/middlewares$1",
      "^@utils(.*)$": "<rootDir>/app/utils$1",
      "^@repositories(.*)$": "<rootDir>/app/repositories$1",
      "^@errorHandlers(.*)$": "<rootDir>/app/middlewares/errorHandlers$1",
      "^@agile(.*)$": "<rootDir>/agile$1"
    }
  },
  "repository": "git@code.knolskape.com:html/agile/back-end.git",
  "author": "Sindhu Anandhakrishnan <sindhu.a@knolskape.com>",
  "license": "PRIVATE",
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "@koa/cors": "2",
    "@sentry/node": "^5.13.2",
    "analytics-data-collection-wrapper": "git+ssh://git@code.knolskape.com:analytics/js-data-collection-wrapper.git#v1.2",
    "dotenv": "^8.0.0",
    "firebase": "^5.9.3",
    "health-check-sdk": "git+ssh://git@code.knolskape.com:ad-platform/health-check-sdk.git#v0.12",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-ejs": "^4.2.0",
    "koa-requestid": "^2.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.11",
    "module-alias": "^2.2.0",
    "newrelic": "^5.13.1",
    "node-fetch": "^2.3.0",
    "node-login-wrapper": "git+ssh://git@code.knolskape.com:ad-platform/node-login-wrapper.git#1.5.0",
    "pg": "^7.7.1",
    "pg-hstore": "^2.3.2",
    "pm2": "^3.5.0",
    "postmark": "^2.2.9",
    "pretty-error": "^2.1.1",
    "re-base": "^4.0.0",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "spreadsheet-to-json": "^2.0.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.10.0"
  },
  "scripts": {
    "test": "jest --coverage --watchAll",
    "test:control": "jest --coverage --watchAll --testPathPattern=/__tests__/controllers",
    "test:models": "jest --coverage --watchAll --testPathPattern=/__tests__/models",
    "start-dev": "./node_modules/.bin/pm2 start ecosystem.config.js --only development && ./node_modules/.bin/pm2 logs",
    "start-prod": "NODE_ENV=production pm2 start ecosystem.config.js --only production --no-daemon",
    "lint": "./node_modules/.bin/eslint **/*.js"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "mocha": "^6.1.4",
    "sequelize-mock": "^0.10.2",
    "supertest": "^4.0.2"
  }
}
